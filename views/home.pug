doctype html
html
  head
    link(rel='shortcut icon', href='http://localhost:3000/imagens/favicon.ico')
    script(src='https://code.getmdl.io/1.3.0/material.min.js')
    link(rel='stylesheet', href='http://localhost:3000/stylesheets/styleArtigo.css')
    link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.indigo-pink.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    script(defer='defer', src='https://code.getmdl.io/1.3.0/material.min.js')
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js')
  body
    // Uses a transparent header that draws on top of the layout's background
    .demo-layout-transparent.mdl-layout.mdl-js-layout
      header.mdl-layout__header.mdl-layout__header--transparent
        .mdl-layout__header-row
          // Title
          span.mdl-layout-title Bid$
          // Add spacer, to align navigation to the right
          .mdl-layout-spacer
          // Navigation
          nav.mdl-navigation
            if !userId
              a#myBtn Login/Registar
            else
              a(href='http://localhost:3000/logout') Admin
              br
              a(href='http://localhost:3000/logout') Logout
      .mdl-layout__drawer
        span.mdl-layout-title BIDS SITE
        nav.mdl-navigation
          a.mdl-navigation__link(href='') Categorias
          a.mdl-navigation__link(href='http://localhost:3000/adicionarItem.html') Leiloar Produto
          //a.mdl-navigation__link(href='http://localhost:3000/register') Register

          if userId === ""
            a#myBtn Login/Registar
            a#myBtn.mdl-navigation__link(href='http://localhost:3000/')
          else
            a#myBtn.mdl-navigation__link(href='http://localhost:3000/logout') Logout
      main.mdl-layout__content
        .conteudo-site
          h2.titles-index Categorias
          .tecnologia
            .container
              img.image(src='http://localhost:3000/imagens/tecnologia.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=tecnologia') Tecnologia
          .automoveis
            .container
              img.image(src='http://localhost:3000/imagens/carros.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=automoveis') Automóveis
          .imoveis
            .container
              img.image(src='http://localhost:3000/imagens/casas.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=imoveis') Imoveis
          .antiguidades
            .container
              img.image(src='http://localhost:3000/imagens/antiguidade.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=antiguidade') Antiguidade
          .livros
            .container
              img.image(src='http://localhost:3000/imagens/livros.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=livros') Livros
          .joalharia
            .container
              img.image(src='http://localhost:3000/imagens/joalharia.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=joalharia') Joalharia
          .arte
            .container
              img.image(src='http://localhost:3000/imagens/arte.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=arte') Arte
          .outros
            .container
              img.image(src='http://localhost:3000/imagens/outros.jpg', alt='Avatar', style='width:100%')
              .middle
                .text
                  a(href='/items/?category=outros') outros
        // The Modal
        #myModal.modal
          // Modal content
          .modal-content
            span.close ×
            form(action='#')
              .mdl-textfield.mdl-js-textfield
                input#email.mdl-textfield__input(type='text')
                label.mdl-textfield__label(for='sample1') Email...
              br
              .mdl-textfield.mdl-js-textfield
                input#password.mdl-textfield__input(type='password')
                label.mdl-textfield__label(for='sample1') Password...
              button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored(type='', onclick='login()')
                i.material-icons.right send
            .novoRegisto
              br
              h8
                a(href='http://localhost:3000/register')  Ainda não está registado? Clique aqui! 
    script(src='http://localhost:3000/javascripts/modal.js')
    script(src='http://localhost:3000/javascripts/loginScript.js')
